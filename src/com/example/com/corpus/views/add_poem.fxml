<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.com.corpus.controllers.AddPoemController"
            prefHeight="200.0" prefWidth="600.0" >
    <headerText >
        Add New Poem.
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label  text="Poem Title: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="title"  promptText="Type Poem Title" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Poet Name: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="poet"  promptText="Type Poet Name..." GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Book Name: " GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="book"  promptText="Type Book Name" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>

    </content>
</DialogPane>
