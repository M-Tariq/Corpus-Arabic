<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.com.corpus.controllers.AddRootController"
            prefHeight="100.0" prefWidth="300.0">
    <headerText >
        Add New Root.
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label  text="Root: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="rootTv"  promptText="Type root here..." GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <CheckBox fx:id="inQuranCheckBox" text="In Quran" GridPane.rowIndex="2"/>

        </GridPane>

    </content>
</DialogPane>
